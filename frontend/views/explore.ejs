<% var len = 10 %>

<script>

    jQuery.support.cors = true;
    $("#idForm").submit(function(e) {

    e.preventDefault(); // avoid to execute the actual submit of the form.

    var form = $(this);
    var url = form.attr('action');

    $.ajax({
        type: "GET",
        url: url,
        data: form.serialize(), // serializes the form's elements.
        success: function(data)
        {
            // TODO, render the page instead of just alert
            console.log(data);
            len = data.length;
            var ret = data[0].date;
            alert(len); // show response from the php script.
            $("#list").empty();
            $.each(data, function (index, d) {
                
                $("#list1").append(
                    '<a href="'+ d.url +'" class="list-group-item">' + d.title + '</a>'
                );
                $("#list2").append(
                    '<li href="'+ d.url +'" class="list-group-item">' + d.authors + '</li>'
                );
                $("#list3").append(
                    '<li href="'+ d.url +'" class="list-group-item">' + d.venue + '</li>'
                );

            })
        }
        });
});
</script>

<div class="row">
